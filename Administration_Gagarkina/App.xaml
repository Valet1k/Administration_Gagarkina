        <Style x:Key="TextBoxPassword" TargetType="PasswordBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10,1" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Grid>
                            <!--  Визуальные элементы  -->
                            <Border
                                x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True" />

                            <!--  Контент  -->
                            <ScrollViewer
                                x:Name="PART_ContentHost"
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!--  Изменение цвета рамки при фокусе  -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF0078D7" />
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF0078D7" />
                            </Trigger>

                            <!--  Изменение при наведении  -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#FF7BA4D9" />
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF7BA4D9" />
                            </Trigger>

                            <!--  Отключенное состояние  -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFF0F0F0" />
                                <Setter Property="Foreground" Value="Gray" />
                                <Setter TargetName="border" Property="Background" Value="#FFF0F0F0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>





        <Style x:Key="Button_Admin" TargetType="Button">
            <Setter Property="Background" Value="#f8f9fa" />
