<Page x:Class="Administration_Gagarkina.Pages.Page_Administrator"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Administration_Gagarkina.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Administrator"
      Background="#26313B">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Border Background="#18252C" 
                Width="799"
                Height="70"
                BorderBrush="Black" 
                Grid.Row="0"
                BorderThickness="1,1,1,1" 
                CornerRadius="10,10,20,20"
                VerticalAlignment="Top">



            <StackPanel>
                <Image Source="C:\Users\Valya\OneDrive\Рабочий стол\производственная практика №2\Administration_Gagarkina\Administration_Gagarkina\Image\профиль2.png"
                       Width="45"
                       HorizontalAlignment="Right"
                       Margin="10"/>
            </StackPanel>


        </Border>

        <DataGrid
            Grid.Row="1"
            Margin="10"
            Name="GridAdmin"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            VerticalScrollBarVisibility="Auto"
            SelectionChanged="GridAdmin_SelectionChanged"
            >

            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Header="Сотрудник"
                    Binding="{Binding }"
                    />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="0">
            <Button
               Width="150"
               Height="30"
               Content="Добавить переработку"
               Margin="10"
                Style="{StaticResource Button_Admin}"
                />

        </StackPanel>

        <Grid Width="300" 
              Height="40"
              Grid.Row="0"
              HorizontalAlignment="Left"
              Margin="5"
              VerticalAlignment="Center">

            <Border CornerRadius="20"
            Background="#F0F0F0">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Placeholder Text -->
                    <TextBlock Text="Поиск по фамилии"
                       Margin="15,0,0,0"
                       VerticalAlignment="Center"
                       Foreground="Gray"
                       IsHitTestVisible="False"
                       x:Name="PlaceholderText">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Text Input -->
                    <TextBox Grid.Column="0"
                     x:Name="SearchTextBox"
                     BorderThickness="0"
                     Background="Transparent"
                     VerticalAlignment="Center"
                     Margin="15,0,0,0"
                     Padding="2"
                     FontSize="14"
                     Foreground="Black"
                     TextChanged="SearchTextBox_TextChanged"/>

                    <!-- Search Button -->
                    <Button Grid.Column="1"
                    Width="30"
                    Height="30"
                    Foreground="White"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Cursor="Hand"
                    Style="{StaticResource SearchButton}"
                    Name="Btn_Search"
                    Click="Btn_Search_Click">
                        <Viewbox Width="20" 
                                 Height="20">
                            <Canvas Width="24" Height="24">
                                <Image Source="C:\Users\Valya\OneDrive\Рабочий стол\производственная практика №2\Administration_Gagarkina\Administration_Gagarkina\Image\Лупа.png"
                                       Width="25"/>
                            </Canvas>
                        </Viewbox>
                    </Button>
                </Grid>
            </Border>
        </Grid>



    </Grid>
</Page>
