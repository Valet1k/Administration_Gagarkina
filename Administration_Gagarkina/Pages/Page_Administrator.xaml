<Page
    x:Class="Administration_Gagarkina.Pages.Page_Administrator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Administration_Gagarkina.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Page_Administrator"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#f8f9fa"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Width="799"
            Height="70"
            VerticalAlignment="Top"
            Background="#f8f9fa"
            BorderBrush="Black"
            BorderThickness="1,1,1,1"
            CornerRadius="10,10,20,20">

            <Grid>

                <Button
                    Name="Btn_Back"
                    Width="150"
                    Height="30"
                    Margin="0,0,120,0"
                    Click="Btn_Back_Click"
                    Content="Назад"
                    Style="{StaticResource Button_Admin}" />


                <Button
                    Name="Btn_Addovertime"
                    Width="150"
                    Height="30"
                    Margin="190,0,0,0"
                    Click="Btn_Addovertime_Click"
                    Content="Добавить переработку"
                    Style="{StaticResource Button_Admin}" />

                <StackPanel>
                    <Image
                        Width="45"
                        Margin="10"
                        HorizontalAlignment="Right"
                        Source="C:\Users\Valya\OneDrive\Рабочий стол\производственная практика №2\Administration_Gagarkina\Administration_Gagarkina\Image\профиль2.png" />
                </StackPanel>

                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">

                    <Border
                        Width="250"
                        Height="35"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="#F0F0F0"
                        CornerRadius="20">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Placeholder Text  -->
                            <TextBlock
                                x:Name="PlaceholderText"
                                Margin="15,0,0,0"
                                VerticalAlignment="Center"
                                Foreground="Gray"
                                IsHitTestVisible="False"
                                Text="Поиск по фамилии">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <!--  По умолчанию скрыт  -->
                                        <Style.Triggers>
                                            <!--  Показываем только если текст пуст  -->
                                            <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>


                            <!--  Text Input  -->
                            <TextBox
                                x:Name="SearchTextBox"
                                Grid.Column="0"
                                Margin="15,0,0,0"
                                Padding="2"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="14"
                                Foreground="Black" />
                            <!--  Search Button  -->
                            <Button
                                Name="Btn_Search"
                                Grid.Column="1"
                                Width="30"
                                Height="30"
                                Padding="0"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="Btn_Search_Click"
                                Cursor="Hand"
                                Foreground="White"
                                Style="{StaticResource SearchButton}">
                                <Viewbox Width="20" Height="20">
                                    <Canvas Width="24" Height="24">
                                        <Image Width="25" Source="C:\Users\Valya\OneDrive\Рабочий стол\производственная практика №2\Administration_Gagarkina\Administration_Gagarkina\Image\Лупа.png" />
                                    </Canvas>
                                </Viewbox>
                            </Button>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <DataGrid
            Name="GridAdmin"
            Grid.Row="1"
            Margin="10"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            VerticalScrollBarVisibility="Auto">

            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Surname}"
                    Header="Сотрудник" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Post.Name_Post}"
                    Header="Должность" />


                <DataGridTemplateColumn Header="Окно просмотра">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                Name="Btn_Edit"
                                Width="150"
                                Height="30"
                                Click="Btn_Edit_Click"
                                Content="Подробнее"
                                Style="{StaticResource Button_Edit}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Grid
            Grid.Row="0"
            Width="300"
            Height="40"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" />
    </Grid>
</Page>
