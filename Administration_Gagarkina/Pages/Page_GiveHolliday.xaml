<Page
    x:Class="Administration_Gagarkina.Pages.Page_GiveHolliday"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Administration_Gagarkina.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Page_GiveHolliday"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>


        <Border
            Grid.Row="0"
            Width="799"
            Height="70"
            VerticalAlignment="Top"
            Background="#f8f9fa"
            BorderBrush="Black"
            BorderThickness="1,1,1,1"
            CornerRadius="10,10,20,20">


            <Grid>
                <StackPanel Orientation="Horizontal">

                    <Button
                        Name="Btn_back"
                        Width="150"
                        Height="30"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        Click="Btn_back_Click"
                        Content="Назад"
                        Style="{StaticResource Button_Admin}" />


                    <Button
                        Name="Btn_GiveHollidau"
                        Width="150"
                        Height="30"
                        Margin="10,0,0,0"
                        Click="Btn_GiveHollidau_Click"
                        Content="Выдать"
                        Style="{StaticResource Button_Admin}" />
                </StackPanel>

                <Image
                    Width="80"
                    Margin="10"
                    HorizontalAlignment="Right"
                    Source="/Image/герб.png" />

            </Grid>



        </Border>


        <StackPanel
            Grid.Row="1"
            Margin="10,0,0,0"
            HorizontalAlignment="Left">

            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Name="Txb_employee"
                    Width="180"
                    FontSize="14"
                    Text="Сотрудник:" />

                <ComboBox
                    Name="Cmb_employee"
                    Width="150"
                    Margin="10,0,0,0" SelectionChanged="Cmb_employee_SelectionChanged" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock
                    Width="180"
                    FontSize="14"
                    Text="Не использованные часы:" />

                <TextBlock
                    Name="Txb_unused_hours"
                    Width="150"
                    FontSize="14"
                    Text="0" 
                    Margin="10,0,0,0"/>
            </StackPanel>


            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <TextBlock
                    Name="Txb_dateholliday"
                    Width="180"
                    FontSize="14"
                    Text="Дата:" />

                <DatePicker
                    Name="DatePicker_dateholliday"
                    Width="150"
                    Margin="10,0,0,0" />
            </StackPanel>






        </StackPanel>


    </Grid>
</Page>
