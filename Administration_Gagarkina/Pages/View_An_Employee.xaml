<Page x:Class="Administration_Gagarkina.Pages.View_An_Employee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Administration_Gagarkina.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="View_An_Employee"
      Background="#D3D3FF">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Width="799"
            Height="70"
            VerticalAlignment="Top"
            Background="#9D9DCC"
            BorderBrush="#9D9DCC"
            BorderThickness="1,1,1,1"
            CornerRadius="10,10,20,20">
            <Grid>

                <StackPanel>
                    <Image
                 Width="45"
                 Margin="10"
                 HorizontalAlignment="Right"
                 Source="C:\Users\Valya\OneDrive\Рабочий стол\производственная практика №2\Administration_Gagarkina\Administration_Gagarkina\Image\профиль2.png" />
                </StackPanel>

                <StackPanel HorizontalAlignment="Left" 
                            Orientation="Horizontal">
                    <Button
                 Width="150"
                 Height="30"
                 Margin="10"
                 Content="Добавить переработку" 
                 Style="{StaticResource Button_Admin}"/>
             
                    <Button
                 Width="150"
                 Height="30"
                 Content="Назад"
                 Name="Btn_Back"
                 Click="Btn_Back_Click"
                 Margin="0,0,5,0"
                 Style="{StaticResource Button_Admin}"/>
                </StackPanel>
            </Grid>
        </Border>

        <DataGrid
         Name="Grid_view_employee"
         Grid.Row="1"
         Margin="10"
         AutoGenerateColumns="False"
         IsReadOnly="True"
         VerticalScrollBarVisibility="Auto">

            <DataGrid.Columns>
                <DataGridTextColumn
             Width="*"
             Binding="{Binding Number_Of_Hours}"
             Header="Количество переработанных часов" />

                <DataGridTextColumn
             Width="*"
             Binding="{Binding Overtime.Date_Recycling}"
             Header="Дата переработки" />

                <DataGridTextColumn
             Width="*"
             Binding="{Binding Overtime.Description}"
             Header="Описание переработки" />
            </DataGrid.Columns>
        </DataGrid>

       
    </Grid>
</Page>
