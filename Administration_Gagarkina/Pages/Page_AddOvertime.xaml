<Page
    x:Class="Administration_Gagarkina.Pages.Page_AddOvertime"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Administration_Gagarkina.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Page_AddOvertime"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#f8f9fa"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Width="799"
            Height="70"
            VerticalAlignment="Top"
            Background="#f8f9fa"
            BorderBrush="Black"
            BorderThickness="1,1,1,1"
            CornerRadius="10,10,20,20">

            <StackPanel Orientation="Horizontal">

                <Button
                    Name="Btn_back"
                    Width="150"
                    Height="30"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    Click="Btn_back_Click"
                    Content="Назад"
                    Style="{StaticResource Button_Admin}" />

                <Button
                    Name="Btn_AddOvertime"
                    Width="150"
                    Height="30"
                    Margin="10,0,0,0"
                    Click="Btn_AddOvertime_Click"
                    Content="Создать"
                    Style="{StaticResource Button_Admin}" />
            </StackPanel>
        </Border>


        <StackPanel
            Grid.Row="1"
            Margin="10,0,0,0"
            HorizontalAlignment="Left">

            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Name="Txb_employee"
                    Width="150"
                    FontSize="14"
                    Text="Сотрудник:" />

                <ComboBox
                    Name="Com_employee"
                    Width="150"
                    Margin="10,0,0,0" />
            </StackPanel>


            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <TextBlock
                    Name="Txb_dateovertime"
                    Width="150"
                    FontSize="14"
                    Text="Дата:" />

                <DatePicker
                    Name="Com_dateovertime"
                    Width="150"
                    Margin="10,0,0,0" />
            </StackPanel>


            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <TextBlock
                    Name="Txb_overtime"
                    Width="150"
                    FontSize="14"
                    Text="Время переработки:" />

                <ComboBox
                    Name="Com_overtime"
                    Width="150"
                    Margin="10,0,0,0" />
            </StackPanel>

            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <TextBlock
                    Name="Txb_Description"
                    Width="150"
                    FontSize="14"
                    Text="Описание:" />


            </StackPanel>

            <TextBox
                Height="100"
                Margin="0,5,0,0"
                AcceptsReturn="True"
                TextWrapping="Wrap" />



        </StackPanel>


    </Grid>
</Page>
