<Page x:Class="Administration_Gagarkina.Pages.Page_Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Administration_Gagarkina.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Authorization"
      Background="#26313B">

    <Border Background="#18252C" 
        Width="300"
        Height="350"
        BorderBrush="Black" 
        BorderThickness="1,1,1,1" 
        CornerRadius="30,30,30,30">
        <Grid>

            <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">

                    <TextBlock 
                Text="Email:"
                Margin="5"
                Foreground="White"
                Width="50"
                />

                    <TextBox 
                x:Name="Txb_Email"
                Width="160"
                Margin="5"
                Foreground="White"
                Background="#18252C"
                Style="{StaticResource TextBoxEmail}"
                />
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">

                    <TextBlock 
                        Text="Password:"
                        Margin="5"
                        Width="50"
                        Foreground="White"
                        />

                    <PasswordBox 
                     x:Name="Psb_Passw"
                     Width="160"
                     Margin="5"
                     Foreground="White"
                     Background="#18252C"
                     Style="{StaticResource TextBoxPassword}"/>
                </StackPanel>

                <Button
                 Width="150"
                 Height="30"
                 Content="Авторизоваться"
                 Margin="10"
                 Style="{StaticResource Button_Authorization}"
                 Name="Btn_Authorization"/>

            </StackPanel>


            <Label VerticalAlignment="Bottom"
          HorizontalAlignment="Center"
          Height="30"
          Margin="5"
          HorizontalContentAlignment="Center"
          Foreground="White"
          FontSize="10">
                <TextBlock>
        <Run Text="У вас нет учётной записи? " />
        <Hyperlink NavigateUri="Page_Registrarion.xaml">
        <Run Text="Зарегистрироваться"
             Foreground="White"
             FontWeight="Bold"/>
    </Hyperlink>
                </TextBlock>
            </Label>

        </Grid>
    </Border>
    
</Page>
