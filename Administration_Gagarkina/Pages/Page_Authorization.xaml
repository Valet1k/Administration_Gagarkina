<Page
    x:Class="Administration_Gagarkina.Pages.Page_Authorization"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Administration_Gagarkina.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Page_Authorization"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#f8f9fa"
    mc:Ignorable="d">

    <Border
        Width="280"
        Height="370"
        Background="Transparent"
        BorderBrush="Black"
        BorderThickness="1,1,1,1"
        CornerRadius="30,30,30,30">
        <Grid>

            <Image
                Width="150"
                Margin="0,10,0,0"
                VerticalAlignment="Top"
                Source="/Image/герб.png" />

            <StackPanel
                Margin="0,50,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">


                    <TextBox
                        x:Name="Txb_Email"
                        Width="250"
                        Height="40"
                        Foreground="Black"
                        KeyDown="Txb_Email_KeyDown"
                        Style="{StaticResource TextBoxEmail}"
                        Tag="Login" />
                </StackPanel>

                <StackPanel
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">


                    <Grid>

                        <Label
                            Name="Ps_Placeholder"
                            Margin="5"
                            VerticalAlignment="Center"
                            Content="Password"
                            FontSize="14"
                            FontStyle="Italic"
                            Foreground="Gray"
                            IsHitTestVisible="False" />

                        <PasswordBox
                            x:Name="Psb_Passw"
                            Width="250"
                            Height="40"
                            Background="Transparent"
                            GotFocus="PasswordBox_GotFocus"
                            LostFocus="PasswordBox_LostFocus"
                            PasswordChanged="PasswordBox_PasswordChanged"
                            Style="{StaticResource TextBoxPassword}" />


                    </Grid>

                </StackPanel>

                <Button
                    Name="Btn_Authorization"
                    Width="150"
                    Height="30"
                    Margin="10"
                    Background="Transparent"
                    BorderBrush="Black"
                    Click="Btn_Authorization_Click"
                    Content="Авторизоваться"
                    FontWeight="Bold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10" />
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>

            <Label
                Height="30"
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                HorizontalContentAlignment="Center"
                FontSize="10"
                Foreground="#090933">
                <TextBlock>
                    <Run Text="Нет аккаунта? " />
                    <Hyperlink NavigateUri="Page_info.xaml">
                        <Run
                            FontWeight="Bold"
                            Foreground="#090933"
                            Text="Инструкция" />
                    </Hyperlink>
                </TextBlock>
            </Label>

        </Grid>
    </Border>

</Page>
