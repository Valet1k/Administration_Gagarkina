<Page
    x:Class="Administration_Gagarkina.Pages.Page_Employee"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Administration_Gagarkina.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Page_Employee"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#f8f9fa"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.9*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Height="70"
            VerticalAlignment="Top"
            Background="#f8f9fa"
            BorderBrush="Black"
            BorderThickness="1,1,1,1"
            CornerRadius="0,00,20,20">

            <Grid>


                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                    <Button
                        Name="Btn_Back"
                        Width="150"
                        Height="30"
                        Margin="10,0,5,0"
                        Click="Btn_Back_Click"
                        Content="Назад"
                        Style="{StaticResource Button_Admin}" />

                    <Button
                        Name="Btn_add_overtime"
                        Click="Btn_add_overtime_Click"
                        Width="150"
                        Height="30"
                        Margin="10"
                        Content="Добавить переработку"
                        Style="{StaticResource Button_Admin}" />
                </StackPanel>
            </Grid>
        </Border>

        <Border
            Grid.Row="1"
            Width="370"
            Height="140"
            Margin="6"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="White"
            BorderBrush="Black"
            BorderThickness="1,1,1,1"
            CornerRadius="30,30,30,30">
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>


                <Border
                    HorizontalAlignment="Right"
                    BorderBrush="Black"
                    BorderThickness="1,0,0,0" />




                <StackPanel
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">


                    <Image
                        Width="50"
                        Height="50"
                        Source="/Image/профиль2.png" />

                    <TextBlock
                        Name="Txb_FIO"
                        Width="150"
                        Margin="0,0,0,5"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Name="Txb_Post"
                        Width="150"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />


                </StackPanel>



                <StackPanel
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">

                    <TextBlock
                        Name="Txb_departament"
                        Width="150"
                        Margin="0,0,0,10"
                        TextWrapping="Wrap" />


                    <TextBlock
                        Name="Txb_total_hours_on_month"
                        Width="150"
                        TextWrapping="Wrap" />


                </StackPanel>

            </Grid>
        </Border>

        <DataGrid
            Name="GridEmployee"
            Grid.Row="2"
            MinWidth="20"
            MinHeight="140"
            Margin="10"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            VerticalScrollBarVisibility="Auto">

            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Number_Of_Hours}"
                    Header="Часы переработки" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Date_Recycling}"
                    Header="Дата переработки" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Description}"
                    Header="Описание переработки" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
