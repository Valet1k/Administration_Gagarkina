<Page
    x:Class="Administration_Gagarkina.Pages.Page_Registrarion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Administration_Gagarkina.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Page_Registrarion"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#f8f9fa"
    mc:Ignorable="d">

    <Grid>
        <Border
            Width="280"
            Height="370"
            Background="Transparent"
            BorderBrush="Black"
            BorderThickness="1,1,1,1"
            CornerRadius="30,30,30,30">

            <Grid>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                    <StackPanel
                        Margin="0,0,0,10"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBox
                            x:Name="Txb_Name"
                            Width="250"
                            Height="40"
                            Background="Transparent"
                            Foreground="#090933"
                            KeyDown="Txb_Name_KeyDown"
                            Style="{StaticResource TextBoxEmail}"
                            Tag="Name" />
                    </StackPanel>

                    <StackPanel
                        Margin="0,0,0,10"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBox
                            x:Name="Txb_Surname"
                            Width="250"
                            Height="40"
                            Background="Transparent"
                            Foreground="#090933"
                            KeyDown="Txb_Surname_KeyDown"
                            Style="{StaticResource TextBoxEmail}"
                            Tag="Surname" />
                    </StackPanel>

                  

                    <StackPanel
                        Margin="0,0,0,10"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <PasswordBox
                            x:Name="Psb_Passw"
                            Width="250"
                            Height="40"
                            Background="Transparent"
                            Foreground="#090933"
                            KeyDown="Psb_Passw_KeyDown"
                            Style="{StaticResource TextBoxPassword}" />
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <PasswordBox
                            x:Name="Psb_Repeat_Passw"
                            Width="250"
                            Height="40"
                            Background="Transparent"
                            Foreground="#090933"
                            PasswordChanged="Psb_Repeat_Passw_PasswordChanged"
                            Style="{StaticResource TextBoxPassword}" />
                    </StackPanel>

                    <Button
                        Name="Btn_Registrarion"
                        Width="150"
                        Height="30"
                        Margin="10"
                        Background="Transparent"
                        BorderBrush="Black"
                        Click="Btn_Registrarion_Click"
                        Content="Зарегистрироваться"
                        FontWeight="Bold"
                        IsEnabled="False">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10" />
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>

                <Label
                    Height="30"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    HorizontalContentAlignment="Center"
                    FontSize="10"
                    Foreground="#090933">

                    <TextBlock>
                        <Run Text="Вернуться на страницу" />
                        <Hyperlink NavigateUri="Page_Administrator.xaml">
                            <Run
                                FontWeight="Bold"
                                Foreground="#090933"
                                Text="Администратора" />
                        </Hyperlink>
                    </TextBlock>
                </Label>



            </Grid>
        </Border>
    </Grid>
</Page>
